---
// src/components/Navbar.astro
import { SITE_CONFIG } from '../config.js';
import { url } from '../utils.js';
import '../styles/navbar.css';

const currentPath = Astro.url.pathname;
---

<!-- Top Info Bar -->
<div class="top-bar">
  <div class="container">
    <div class="top-bar-content">
      <span class="top-bar-location">ğŸ“ Knoxville, TN</span>
      <button 
        class="top-bar-email copy-email-btn" 
        data-email={SITE_CONFIG.email}
        title="Click to copy email address"
      >
        ğŸ“§ {SITE_CONFIG.email}
      </button>
    </div>
  </div>
</div>

<!-- Main Navbar -->
<header class="site-header">
  <nav class="container">
    <div class="header-inner">
      <a href={url('')} class="brand">Southern Golden Retrievers</a>
      <nav class="nav">
        <a href={url('')} class={`nav-link ${currentPath === url('') ? 'active' : ''}`}>Home</a>
        <a href={url('current-litters')} class={`nav-link ${currentPath.includes('current-litters') ? 'active' : ''}`}>Current Litters</a>
        <a href={url('dams')} class={`nav-link ${currentPath.includes('dams') ? 'active' : ''}`}>Dams</a>
        <a href={url('testimonials')} class={`nav-link ${currentPath.includes('testimonials') ? 'active' : ''}`}>Testimonials</a>
        <a href={url('contact')} class={`nav-link ${currentPath.includes('contact') ? 'active' : ''}`}>Contact</a>
        <a href={url('about')} class={`nav-link ${currentPath.includes('about') ? 'active' : ''}`}>About</a>
      </nav>
    </div>
  </nav>
</header>