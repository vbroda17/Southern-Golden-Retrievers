---
// src/components/Navbar.astro
import { SITE_CONFIG } from '../config.js';
import '../styles/navbar.css';

const currentPath = Astro.url.pathname;
const base = import.meta.env.BASE_URL;
---

<!-- Top Info Bar -->
<div class="top-bar">
  <div class="container">
    <div class="top-bar-content">
      <span class="top-bar-location">ğŸ“ Knoxville, TN</span>
      <button 
        class="top-bar-email copy-email-btn" 
        data-email={SITE_CONFIG.email}
        title="Click to copy email address"
      >
        ğŸ“§ {SITE_CONFIG.email}
      </button>
    </div>
  </div>
</div>

<!-- Main Navbar -->
<header class="site-header">
  <div class="container">
    <div class="header-inner">
      <a href={base} class="brand">Southern Golden Retrievers</a>
      <nav class="nav">
        <a href={base} class={`nav-link ${currentPath === base ? 'active' : ''}`}>Home</a>
        <a href={`${base}current-litters`} class={`nav-link ${currentPath.includes('/current-litters') ? 'active' : ''}`}>Current Litters</a>
        <a href={`${base}dams`} class={`nav-link ${currentPath.includes('/dams') ? 'active' : ''}`}>Dams</a>
        <a href={`${base}testimonials`} class={`nav-link ${currentPath.includes('/testimonials') ? 'active' : ''}`}>Testimonials</a>
        <a href={`${base}contact`} class={`nav-link ${currentPath.includes('/contact') ? 'active' : ''}`}>Contact</a>
        <a href={`${base}about`} class={`nav-link ${currentPath.includes('/about') ? 'active' : ''}`}>About</a>
      </nav>
    </div>
  </div>
</header>