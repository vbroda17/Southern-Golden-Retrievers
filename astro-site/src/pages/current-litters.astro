---
// src/pages/current-litters.astro
import Layout from '../layouts/Layout.astro';
import EmailLink from '../components/EmailLink.astro';
import LitterSection from '../components/LitterSection.astro';
import { currentLitters } from '../data/sample-litters-data.js';
import { url } from '../utils.js';
import '../styles/current-litters.css';

const title = "Available Litters - Southern Golden Retrievers";
const description = "View our current litters of golden retriever puppies available in Knoxville, TN.";
---

<Layout title={title} description={description}>
    <div class="container">
        <section class="hero">
            <h1>Current Litters</h1>
            <p>Meet our beautiful golden retriever puppies currently available. Our moms are tested and certified, so you know these puppies will be strong, health, and a great addition to your family. See which pupp touches your heart!</p>
            <p>For quetions or inquires, contact us at <EmailLink showCopy={true}>.</p>
        </section>

        <!-- Quick Navigation -->
        {currentLitters.length > 1 && (
          <div class="litter-nav card">
            <h2>Jump to Litter:</h2>
            <div class="litter-nav-buttons">
              {currentLitters.map(litter => (
                <a href={`#${litter.id}`} class="btn">
                  {litter.dam.name}'s Litter
                </a>
              ))}
            </div>
          </div>
        )}

        <!-- Display Each Litter -->
        {currentLitters.map(litter => (
          <LitterSection litter={litter} />
        ))}

        <!-- No Litters Message -->
        {currentLitters.length === 0 && (
          <section class="card no-litters">
            <h2>No Current Litters</h2>
            <p>We don't have any puppies available right now, but we have litters planned! Contact us to be added to our waiting list.</p>
            <p><EmailLink subject="Waiting List Inquiry" text="Join our waiting list" /></p>
          </section>
        )}

        <!-- Contact CTA -->
        <section class="card contact-cta">
            <h2>Interested in a Puppy?</h2>
            <p>Contact us at <EmailLink showCopy={true} subject="Interested in Current Litter" /> or visit our <a href={url("contact/")}>contact page</a> to learn more about adopting one of our puppies.</p>
        </section>
    </div>
</Layout>